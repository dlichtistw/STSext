{
    "manifest_version": 2,
    "name": "STS Extensions",
    "version": "0.4",
    
    "description": "Some extensions for the Stellwerksim.de pages.",
        
    "content_scripts": [
        {
            "matches": [ "*://www.stellwerksim.de/*" ],
            "js": [ "general.js" ]
        },
        {
            "matches": [ "*://www.stellwerksim.de/anlagen.php*" ],
            "js": [ "anlagen.js" ]
        },
        {
            "matches": [ "*://www.stellwerksim.de/spieleabend.php*" ],
            "js": [ "spieleabend.js" ]
        }
    ],
    
    "options_ui": {
        "page": "options.html"
    },
    
    "permissions": [ "storage" ],
    
    "browser_specific_settings": {
        "gecko": {
            "id": "stsext@dlichtistw"
        }
    }
}
